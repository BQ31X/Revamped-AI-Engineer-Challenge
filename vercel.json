{
    "version": 2,
    "builds": [
      { "src": "frontend/package.json", "use": "@vercel/next" },
      { "src": "api/backend.py", "use": "@vercel/python" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/api/backend.py" },
      { "source": "/(.*)", "destination": "/frontend/$1" }
    ]
  } 